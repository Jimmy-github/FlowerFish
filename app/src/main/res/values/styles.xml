<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="FlowerImageView">

        <item name="android:layout_width">@dimen/FlowerImangeViewWidth</item>
        <item name="android:layout_height">@dimen/FlowerImangeViewHeight</item>

    </style>

    <style name="RightWrongBtn">
        <item name="android:layout_height">@dimen/RightWrongBtnHeight</item>
        <item name="android:layout_width">@dimen/RightWrongBtnWidth</item>
        <item name="android:layout_margin">@dimen/RightWrongBtnMargin</item>
    </style>

    <style name="NumberGameNumLineImagineView">

        <item name="android:layout_width">@dimen/NumGameNumLineIVWdith</item>
        <item name="android:layout_height">@dimen/NumGameNumLineIVHeight</item>
        <item name="android:layout_marginLeft">@dimen/NumGameNumLineIVMarginLeft</item>
    </style>

    <style name="NumberGameNumLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/NumGameNumLineMarginBottom</item>
        <item name="android:orientation">horizontal</item>

    </style>


</resources>
