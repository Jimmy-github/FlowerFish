<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eva_object_bg"
    android:layout_width="@dimen/size_456"
    android:layout_height="@dimen/size_400"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/rect_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_eva_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西红柿"
            android:textColor="#C00000"
            android:textSize="@dimen/size_50" />

        <ImageView
            android:id="@+id/iv_eva_object"
            android:layout_width="@dimen/size_260"
            android:layout_height="@dimen/size_260"
            android:src="@mipmap/eva_tomato" />
    </LinearLayout>

</FrameLayout>
