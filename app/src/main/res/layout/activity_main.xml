<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bagelplay.flowerfish.MainActivity">


    <FrameLayout
        android:id="@+id/fl_flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/flower_0" />
        <ImageView
            android:id="@+id/im_flower5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/newflower_5_0" />

        <ImageView
            android:id="@+id/im_flower4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/newflower_4_0" />
        <ImageView
            android:id="@+id/im_flower3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/newflower_3_0" />

    <ImageView
        android:id="@+id/im_flower2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/newflower_2_0" />

    <ImageView
        android:id="@+id/im_flower1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/newflower_1_0" />

    </FrameLayout>

</LinearLayout>
