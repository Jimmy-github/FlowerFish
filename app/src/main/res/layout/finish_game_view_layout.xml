<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/finish_game_bg">

    <RelativeLayout
        android:id="@+id/rl_anim"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_fish"
            android:layout_width="132dp"
            android:layout_height="102dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/fish" />

        <ImageView
            android:id="@+id/iv_petal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/iv_fish"
            android:layout_marginLeft="130dp"
            android:src="@mipmap/petal" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_right_wrong_line"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

     >

        <ImageView

            android:id="@+id/iv_right"
            style="@style/FinishGameRightWrongBtn"
            android:layout_alignParentLeft="true"

            android:src="@mipmap/right_btn" />

        <ImageView
            android:id="@+id/iv_wrong"
            android:layout_alignParentRight="true"
            style="@style/FinishGameRightWrongBtn"

            android:src="@mipmap/wrong_btn" />

    </RelativeLayout>


</RelativeLayout>