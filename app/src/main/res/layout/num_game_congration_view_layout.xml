<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/congration_bg"
    android:gravity="center"
    android:id="@+id/ll_parent"
    >

    <RelativeLayout

        android:id="@+id/rl_congration_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_congration_fish"
            android:layout_width="66dp"
            android:layout_height="51dp"
            android:src="@mipmap/fish"/>
        <ImageView
            android:id="@+id/iv_congration_word"
            android:layout_width="231dp"
            android:layout_height="68dp"
            android:layout_toRightOf="@+id/iv_congration_fish"
            android:layout_toEndOf="@+id/iv_congration_fish"
            android:src="@mipmap/congration_word"/>
    </RelativeLayout>



</LinearLayout>