<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_256"
    android:layout_height="@dimen/size_350"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_ham_bread_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_108"
        android:src="@mipmap/eva_ham_bread_up" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_172"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ham_fruit1"
                android:layout_width="@dimen/size_128"
                android:layout_height="match_parent"
                android:src="@mipmap/eva_tomato_small" />

            <ImageView
                android:id="@+id/iv_ham_fruit2"
                android:layout_width="@dimen/size_128"
                android:layout_height="match_parent"
                android:src="@mipmap/eva_cucumber_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ham_fruit3"
                android:layout_width="@dimen/size_128"
                android:layout_height="match_parent"
                android:src="@mipmap/eva_cabbage_small" />

            <ImageView
                android:id="@+id/iv_ham_fruit4"
                android:layout_width="@dimen/size_128"
                android:layout_height="match_parent"
                android:src="@mipmap/eva_papper_small" />

        </LinearLayout>


    </LinearLayout>

    <ImageView

        android:id="@+id/iv_ham_bread_dowm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:src="@mipmap/eva_ham_bread_down" />
</LinearLayout>

