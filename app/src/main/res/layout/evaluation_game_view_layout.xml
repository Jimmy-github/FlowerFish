<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/eva_game_bg">

    <FrameLayout
        android:id="@+id/eva_object_bg"
        android:layout_width="@dimen/size_456"
        android:layout_height="@dimen/size_348"

        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/rect_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西红柿"
                android:textColor="#C00000"

                android:textSize="@dimen/size_50" />

            <ImageView

                android:layout_width="@dimen/size_260"
                android:layout_height="@dimen/size_260"
                android:src="@mipmap/eva_tomato" />
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="@dimen/size_256"
        android:layout_height="@dimen/size_350"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size_50"
        android:layout_marginTop="@dimen/size_120"
        android:orientation="vertical">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="@dimen/size_108"
            android:src="@mipmap/eva_ham_bread_up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_172"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_80"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_fruit1"
                    android:layout_width="@dimen/size_128"
                    android:layout_height="match_parent"
                    android:src="@mipmap/eva_tomato_small" />

                <ImageView
                    android:id="@+id/iv_fruit2"
                    android:layout_width="@dimen/size_128"
                    android:layout_height="match_parent"
                    android:src="@mipmap/eva_cucumber_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_80"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_fruit3"
                    android:layout_width="@dimen/size_128"
                    android:layout_height="match_parent"
                    android:src="@mipmap/eva_cabbage_small" />

                <ImageView
                    android:id="@+id/iv_fruit4"
                    android:layout_width="@dimen/size_128"
                    android:layout_height="match_parent"
                    android:src="@mipmap/eva_papper_small" />

            </LinearLayout>


        </LinearLayout>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="@dimen/size_70"
            android:src="@mipmap/eva_ham_bread_down" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <com.jimmy.wavelibrary.WaveLineView
            android:id="@+id/wave_line_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_160"
            android:layout_gravity="bottom">

        </com.jimmy.wavelibrary.WaveLineView>

        <ImageView
            android:id="@+id/iv_xiaohaoqi"
            android:layout_width="@dimen/size_150"
            android:layout_height="@dimen/size_310"
            android:layout_gravity="bottom|left"
            android:layout_margin="@dimen/size_60"
            android:src="@mipmap/xiaohaoqi" />


        <RatingBar
            android:id="@+id/ratingBar"
           style="@style/myRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"

            android:numStars="5"

            android:rating="1.5"></RatingBar>


    </FrameLayout>


</RelativeLayout>